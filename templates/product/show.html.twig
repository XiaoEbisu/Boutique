				<span class="product-price">{{ (product.price /100) | number_format(2, ',' , '.') }}
					€</span>
				<p><a class="btn btn-light btn-sm mt-3" role="button" href="{{ path('product', { 'slug' : product.slug }) }}">Découvrir &raquo;</a></p>
				
			</div>
		{% endfor %}
	</div>
{% endblock %}
